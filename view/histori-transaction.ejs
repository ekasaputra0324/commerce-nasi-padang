








<%- include('admin/head') %>
<div id="app">
    <%- include('admin/sidebar') %>
    <div id="main">
        <header class="mb-3">
            <a href="#" class="burger-btn d-block d-xl-none">
                <i class="bi bi-justify fs-3"></i>
            </a>
        </header>
        <div class="page-heading">
            <div class="page-title">
                <div class="row">
                    <div class="col-12 col-md-6 order-md-1 order-last">
                        <h3>Transaksi</h3>
                        <p class="text-subtitle text-muted">Daftar riwayat transaksi</p>
                    </div>
                    <div class="col-12 col-md-6 order-md-2 order-first">
                        <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Transaksi</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
            <section class="section">
                <div class="card">
                    <div class="card-header">
        
                    </div>
                    <!-- modal -->
                    <!-- end modal -->
                    <div class="card-body">
                        <table class="table table-striped" id="table1">
                            <thead>
                                <tr>
                                    <th>Custumer</th>
                                    <th>Product</th>
                                    <th>Jumlah</th>
                                    <th>Pirce</th>
                                    <th>Total Harga</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% var no = 1; %>
                                <% if(data.length){ for(var i = 0; i< data.length; i++) {%>
                                <tr>
                                    <td><%= data[i].name %> </td>
                                    <td><%= data[i].nama_product %> </td>
                                    <td><%= data[i].jumlah %> </td>
                                    <%   var  bilangan = data[i].harga_product ;
                                        if (bilangan.toString() != null) {     
                                            var	number_string = bilangan.toString(),
                                                sisa 	= number_string.length % 3,
                                                total   = number_string.substr(0, sisa),
                                                ribuan 	= number_string.substr(sisa).match(/\d{3}/g);
                                                    
                                            if (ribuan) {
                                                separator = sisa ? '.' : '';
                                                total += separator + ribuan.join('.');
                                        } 
                                        }else{
                                            var	number_string = bilangan.toString(),
                                                sisa 	= number_string.length % 3,
                                                total   = number_string.substr(0, sisa),
                                                ribuan 	= number_string.substr(sisa).match(/\d{3}/g);
                                                    
                                            if (ribuan) {
                                                separator = sisa ? '.' : '';
                                          }      total += separator + ribuan.join('.');
                                        }
                                    %>
                                    <td>Rp <%= total %> </td>
                                    <%   var  bilangan = data[i].harga_product * data[i].jumlah ;
                                        if (bilangan.toString() != null) {     
                                            var	number_string = bilangan.toString(),
                                                sisa 	= number_string.length % 3,
                                                total   = number_string.substr(0, sisa),
                                                ribuan 	= number_string.substr(sisa).match(/\d{3}/g);
                                                    
                                            if (ribuan) {
                                                separator = sisa ? '.' : '';
                                                total += separator + ribuan.join('.');
                                        } 
                                        }else{
                                            var	number_string = bilangan.toString(),
                                                sisa 	= number_string.length % 3,
                                                total   = number_string.substr(0, sisa),
                                                ribuan 	= number_string.substr(sisa).match(/\d{3}/g);
                                                    
                                            if (ribuan) {
                                                separator = sisa ? '.' : '';
                                          }      total += separator + ribuan.join('.');
                                        }
                                    %>
                                    <td>Rp<%= total %> </td>
                                    <td>
                                        <% if(data[i].status_making == 0){ %>
                                        <span class="text-warning">Proses</span>
                                        <% }else{ %>
                                        <span class="text-success">Selesai</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-outline-danger"><i
                                            onclick="deletedTransaction('<%=  data[i].id %>')"
                                            class="fa-solid fa-trash"></i></button>
                                    </td>
                                </tr>
                                <% } } %>
                        </table>
                    </div>
                </div>

            </section>
        </div>
        <%- include('admin/footer') %>







