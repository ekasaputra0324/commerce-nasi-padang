<%- include('admin/head') %>
<!-- <section class="h-100" style="margin-top: 5%;"> -->
          <div id="auth">
          
            <div class="row h-100">
                <div class="col-lg-5 col-12">
                    <div id="auth-left">
                        
                        <h1 class="auth-title" style="color:  #dbae33;">Sign Up</h1>
                        <p class="auth-subtitle mb-5">Masukkan Data untuk Mendaftar di akun Website Padang Juara.</p>
                        <% if(message == 'failed'){ %> 
                            <div class="alert alert-danger" role="alert">
                                Email Already Exits    
                            </div>
                              <% } %> 
                              <% if(message == 'success'){ %> 
                                <div class="alert alert-success" role="alert" >
                                    I was successfully registered    
                                </div>
                                  <% } %> 
                                  <% if(message == 'dontMacht') {%>
                                    <div class="alert alert-danger" role="alert">
                                        Password dont Macth    
                                    </div>
                                    <% } %>  
                        <form action="/resgiter" method="post">
                            <div class="form-group position-relative has-icon-left mb-4">
                                <input type="text" class="form-control form-control-xl" placeholder="Email" name="email">
                                <div class="form-control-icon">
                                    <i class="bi bi-envelope"></i>
                                </div>
                            </div>
                            <div class="form-group position-relative has-icon-left mb-4">
                                <input type="text" class="form-control form-control-xl" placeholder="Username" name="name">
                                <div class="form-control-icon">
                                    <i class="bi bi-person"></i>
                                </div>
                            </div>
                            <div class="form-group position-relative has-icon-left mb-4">
                                <input type="password" name="password" class="form-control form-control-xl" placeholder="Password">
                                <div class="form-control-icon">
                                    <i class="bi bi-shield-lock"></i>
                                </div>
                            </div>
                            <div class="form-group position-relative has-icon-left mb-4">
                                <input type="password" class="form-control form-control-xl" name="password2"  placeholder="Confirm Password">
                                <div class="form-control-icon">
                                    <i class="bi bi-shield-lock"></i>
                                </div>
                            </div>
                            <button class="btn btn btn-block btn-lg shadow-lg mt-5" style="background-color:  #dbae33; color: white;">Sign Up</button>
                        </form>
                        <div class="text-center mt-5 text-lg fs-4">
                            <p class='text-gray-600'>Already have an account? <a href="/login"
                                    class="font-bold" style="color:  #dbae33;">Log
                                    in</a>.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-7 d-none d-lg-block">
                    <div id="auth-right">
    
                    </div>
                </div>
            </div>
    
        </div>
