<%- include('admin/head') %>
			<div id="auth">
				<div class="row h-100">
					<div class="col-lg-5 col-12">
						<div id="auth-left">
							<div class="auth-logo">
								<!-- <a href="index.html"><img src="/assets-users/img/logo.png" alt="Logo"></a> -->
							</div>
						
							<h1 class="auth-title" style="color:#dbae33 ;">Log in.</h1>
							<p class="auth-subtitle mb-5">Masukkan Data Anda.</p>
							<form action="/auth" method="post">
								<% if(message == 'failed'){ %>
									<div class="alert alert-danger" role="alert"  margin-left: 39%;">
										Password atau Email Salah!
									</div>
									<% } %> 
								<div class="form-group position-relative has-icon-left mb-4">
									<input type="email" class="form-control form-control-xl" placeholder="Email" name="email">
									<div class="form-control-icon">
										<i class="bi bi-person"></i>
									</div>
								</div>
								<div class="form-group position-relative has-icon-left mb-4">
									<input type="password" class="form-control form-control-xl" placeholder="Password" name="password">
									<div class="form-control-icon">
										<i class="bi bi-shield-lock"></i>
									</div>
								</div>
								<button class="btn btn btn-block btn-lg shadow-lg mt-5" style="background-color: #dbae33; color: white; font-weight: bold;">Log in</button>
							</form>
							<div class="text-center mt-5 text-lg fs-4">
								<p class="text-gray-600">Belum Punya Akun?<a href="/resgiter"
										class="font-bold" style="color: #dbae33;">Sign
										up</a>.</p>
								<!-- <p><a class="font-bold" href="auth-forgot-password.html" style="color: #dbae33;">Forgot password?</a>.</p> -->
							</div>
						</div>
					</div>
					<div class="col-lg-7 d-none d-lg-block">
						<div id="auth-right">
		
						</div>
					</div>
				</div>
		
			</div>
    <%- include('admin/footer') %>